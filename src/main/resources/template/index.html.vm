<!DOCTYPE html>
<html lang="en"  xmlns:th="http://www.thymeleaf.org">
<head>
    <base th:href="${#request.getContextPath()}+'/'">
    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" th:href="@{/css/theme-default.css}"/>
    <!-- EOF CSS INCLUDE -->
    <head th:replace="/common/head :: head"></head>

</head>
<body>
<!-- START PAGE CONTAINER -->
<div class="page-container">

    <!-- START PAGE SIDEBAR -->
    <div class="page-sidebar">

        <div th:replace="/common/left :: left"></div>
        <!-- END X-NAVIGATION -->
    </div>
    <!-- END PAGE SIDEBAR -->

    <!-- PAGE CONTENT -->
    <div class="page-content" style="height: 100%;" >

        <div th:replace="/common/top :: top"/>

        <!-- START BREADCRUMB -->
        <!--<ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">菜单管理</a></li>
            <li class="active">菜单列表</li>
        </ul>-->
        <!-- END BREADCRUMB -->

        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-content-wrap">


            <div class="row">
                <div class="col-md-12">

                    <!-- START DATATABLE EXPORT -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">列表</h3>
                            <div class="pull-right">
                            </div>
                        </div>
                        <div class="panel-heading" style="float: right;">
                            <div class="btn-group">
                                <input id="query" type="text" style="width: 200px;display: inline"
                                       class="form-control" placeholder="" />
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-success "
                                        onclick="loadData()">
                                    <span class="glyphicon glyphicon-search"></span>查询
                                </button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-success dropdown-toggle"
                                        onclick="addModal()">
                                    <i class="glyphicon glyphicon-plus"></i>新增
                                </button>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive" >
                                <table id="dataTableId" class="table table-bordered" cellspacing="0" width="100%" >
                                    <thead>
                                        <tr>
                                            <th >
                                                <div class=" td-checkbox">
                                                    <input type="checkbox" name="topCheckboxName" class="group-checkable" />
                                                </div>
                                            </th>

#foreach ($column in $columns)
    #if($column.columnName != 'ID' && $column.columnName != 'id'
    && $column.columnName != 'DEL_FLAG' &&  $column.columnName != 'del_flag'
    && $column.columnName != 'CREATE_ID'  && $column.columnName != 'create_id'
    && $column.columnName != 'CREATE_DATE'&& $column.columnName != 'create_date'
    && $column.columnName != 'UPDATE_ID' && $column.columnName != 'update_id'
    && $column.columnName != 'UPDATE_DATE'&& $column.columnName != 'update_date')
                                            <th width="10%">$column.comments</th>
    #end
#end
                                            <th width="10%">操作</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- END DATATABLE EXPORT -->

                </div>
            </div>

        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->



<div class="modal fade" id="delModal" tabindex="-1" role="dialog"
     aria-labelledby="delModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="userInfoDelModalLabel">删除认证</h4>
            </div>
            <div class="modal-body">
                <input id="delId" type="hidden">
                确定要删除吗？
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-ban-circle"></i>取消</button>
                <button type="button" class="btn btn-primary" onclick="del()"><i class="glyphicon glyphicon-trash"></i>删除</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" role="dialog"
     aria-labelledby="addModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="addModalLabel">新增</h4>
            </div>
            <div class="modal-body">
                <form id="addForm">

                    #foreach ($column in $columns)
                        #if($column.columnName != 'ID' && $column.columnName != 'id'
                        && $column.columnName != 'DEL_FLAG' &&  $column.columnName != 'del_flag'
                        && $column.columnName != 'CREATE_ID'  && $column.columnName != 'create_id'
                        && $column.columnName != 'CREATE_DATE'&& $column.columnName != 'create_date'
                        && $column.columnName != 'UPDATE_ID' && $column.columnName != 'update_id'
                        && $column.columnName != 'UPDATE_DATE'&& $column.columnName != 'update_date')


                            <div class="form-group form-group-40" >
                                <div  class="form-text-right"><span style="color: red;">*</span>$column.columnName</div>
                                <div class="col-sm-8">
                                    <input id="$column.variableAttrName" name="$column.variableAttrName" class="form-control" maxlength="20" minlength="2" placeholder="${column.columnName}" type="text"   />
                                </div>
                            </div>

                        #end
                    #end

                    #*<div class="form-group form-group-40" >
                        <div  class="form-text-right"><span style="color: red;">*</span>是否可选</div>
                        <div class="col-sm-8" style="line-height: 34px;">
                            <label >
                                <input type="checkbox" name="examStatus" checked="checked" id="inlineCheckbox1" value="1">是
                            </label>
                            <label >
                                <input type="checkbox"  name="examStatus" id="inlineCheckbox2" value="2">否
                            </label>
                        </div>
                    </div>*#
                    <input type="reset" name="addReset" style="display: none;"/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-ban-circle"></i>取消</button>
                <button type="button" class="btn btn-primary" onclick="add()"><i class="glyphicon glyphicon-ok-circle"></i>确认</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog"
     aria-labelledby="editModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="">编辑</h4>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input  type="hidden" name="id" id="editId"/>
                    #foreach ($column in $columns)
                        #if($column.columnName != 'ID' && $column.columnName != 'id'
                        && $column.columnName != 'DEL_FLAG' &&  $column.columnName != 'del_flag'
                        && $column.columnName != 'CREATE_ID'  && $column.columnName != 'create_id'
                        && $column.columnName != 'CREATE_DATE'&& $column.columnName != 'create_date'
                        && $column.columnName != 'UPDATE_ID' && $column.columnName != 'update_id'
                        && $column.columnName != 'UPDATE_DATE'&& $column.columnName != 'update_date')


                            <div class="form-group form-group-40" >
                                <div  class="form-text-right"><span style="color: red;">*</span>$column.columnName</div>
                                <div class="col-sm-8">
                                    <input id="edit$column.variableAttrName" name="$column.variableAttrName" class="form-control" maxlength="20" minlength="2" placeholder="${column.columnName}" type="text"   />
                                </div>
                            </div>

                        #end
                    #end
                    <input type="reset" name="editReset" style="display: none;"/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-ban-circle"></i>取消</button>
                <button type="button" class="btn btn-primary" onclick="edit()"><i class="glyphicon glyphicon-ok-circle"></i>确认</button>
            </div>
        </div>
    </div>
</div>



<div th:replace="/common/footer :: footer"/>

<script type="text/javascript" th:src="@{/js/${pathName}.js}"></script>
</body>
</html>






